from netmiko import ConnectHandler
from datetime import datetime

# List of EXOS switches in Access Closet 1
devices = [
    {
        "device_type": "extreme_exos",
        "ip": "10.10.1.22",
        "username": "admin",
        "password": "password",
        "name": "User_Network"
    },
    {
        "device_type": "extreme_exos",
        "ip": "10.10.1.24",
        "username": "admin",
        "password": "password",
        "name": "Local_Switch"
    },
    {
        "device_type": "extreme_exos",
        "ip": "10.10.1.30",
        "username": "admin",
        "password": "password",
        "name": "IT_Network"
    },
    {
        "device_type": "extreme_exos",
        "ip": "10.10.1.31",
